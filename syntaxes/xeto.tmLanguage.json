{
  "scopeName": "source.xeto",
  "patterns": [{ "include": "#file" }],
  "repository": {
    "file": {
      "patterns": [{ "include": "#protos" }]
    },
    "protoMeta": {
      "begin": "<",
      "end": ">",
      "beginCaptures": {
        "0": { "name": "keyword.control" }
      },
      "endCaptures": {
        "0": { "name": "keyword.control" }
      },
      "patterns": [{ "include": "#protos" }]
    },
    "protoData": {
      "name": "xeto.proto.data",
      "begin": "{",
      "end": "}",
      "beginCaptures": {
        "0": { "name": "keyword.control" }
      },
      "endCaptures": {
        "0": { "name": "keyword.control" }
      },
      "patterns": [{ "include": "#protos" }]
    },
    "protos": {
      "name": "xeto.protos.",
      "patterns": [
        { "include": "#proto" },
        { "match": ",", "name": "constant.character" }
      ]
    },
    "protoUnion": {
      "name": "xeto.proto.union",
      "patterns": [
        {
          "match": "\\|",
          "name": "xeto.proto.operator.union",
          "captures": {
            "0": { "name": "keyword.control" }
          }
        },
        { "include": "#protoSimple" }
      ]
    },
    "protoIntersection": {
      "name": "xeto.proto.intersection",
      "patterns": [
        {
          "match": "&",
          "name": "xeto.proto.operator.intersection",
          "captures": {
            "0": { "name": "keyword.control" }
          }
        },
        { "include": "#protoUnion" }
      ]
    },
    "proto": {
      "name": "xeto.proto.container",
      "patterns": [
        { "include": "#leadingDoc" },
        { "include": "#protoIntersection" },
        { "include": "#trailingDoc" },
        { "include": "#embeddedJS" },
        { "include": "#embeddedAxon" },
        { "include": "#embeddedMarkdown" }
      ]
    },
    "markerName": {
      "match": "[a-z][a-zA-Z0-9_]*(?=\\s*:[^:])",
      "name": "xeto.name.marker",
      "captures": {
        "0": { "name": "entity.name.tag" }
      }
    },
    "dataInstanceName": {
      "match": "@([a-zA-Z0-9_~:-]*[a-zA-Z0-9_~])",
      "name": "xeto.name.data",
      "captures": {
        "0": { "name": "storage.type.struct" }
      }
    },
    "name": {
      "match": "(([a-zA-Z][a-zA-Z0-9_]*)\\s*(:(?!:)))",
      "name": "xeto.name",
      "captures": {
        "2": { "name": "entity.name.tag" },
        "3": { "name": "keyword.operator" },
        "4": { "name": "entity.name.type" }
      }
    },
    "qname": {
      "match": "([a-zA-Z][a-zA-Z0-9_]*)(\\.[a-zA-Z][a-zA-Z0-9_]*)*(::[a-zA-Z][a-zA-Z0-9_]*)?",
      "name": "xeto.qname",
      "captures": {
        "0": { "name": "entity.name.type" },
        "3": { "name": "entity.name.lib_type" }
      }
    },
    "protoSimple": {
      "name": "xeto.proto.simple",
      "patterns": [
        { "include": "#protoMarker" },
        { "include": "#protoUnnamed" },
        { "include": "#protoOptional" },
        { "include": "#protoNamed" }
      ]
    },
    "protoMarker": {
      "name": "xeto.proto.marker",
      "patterns": [{ "include": "#markerName" }]
    },
    "protoVal": {
      "name": "xeto.proto.val",
      "patterns": [
        {
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "name": "string.quoted.triple",
          "patterns": [
            { "include": "#embeddedSVG" },
            { "include": "#embeddedHTML" },
            { "include": "#embeddedXML" }
          ]
        },
        {
          "match": "\"[^\"]*\"",
          "name": "string.quoted.double"
        },
        {
          "begin": "\"",
          "end": "",
          "name": "string.quoted.double"
        }
      ]
    },
    "embeddedSVG": {
      "name": "meta.embedded.block.svg",
      "begin": "<svg",
      "end": "</svg>|.*(?=\"\"\")",
      "patterns": [
        {
          "include": "text.xml"
        }
      ]
    },
    "embeddedHTML": {
      "name": "meta.embedded.block.html",
      "begin": "<\\shtml\\s*>",
      "end": "</html\\s*>|.*(?=\"\"\")",
      "patterns": [
        {
          "include": "text.html.basic"
        }
      ]
    },
    "embeddedXML": {
      "name": "meta.embedded.block.xml",
      "begin": "<(\\w*)\\s*>",
      "end": "</\\s*\\1\\s*>|.*(?=\"\"\")",
      "patterns": [
        {
          "include": "text.xml"
        }
      ]
    },
    "protoType": {
      "name": "xeto.proto.type",
      "patterns": [{ "include": "#dataInstanceName" }, { "include": "#qname" }]
    },
    "lineComment": {
      "match": "\\s*//.*$",
      "name": "comment.line.double-slash"
    },
    "trailingDoc": {
      "patterns": [{ "include": "#lineComment" }]
    },
    "leadingDoc": {
      "patterns": [{ "include": "#lineComment" }]
    },
    "embeddedAxon": {
      "name": "meta.embedded.block.axon",
      "begin": "---\\s*axon",
      "end": "---"
    },
    "embeddedJS": {
      "name": "meta.embedded.block.js",
      "begin": "---\\s*javascript",
      "end": "---",
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    },
    "embeddedMarkdown": {
      "name": "meta.embedded.block.md",
      "begin": "---\\s*markdown",
      "end": "---"
    },
    "protoUnnamed": {
      "name": "xeto.proto.unnamed",
      "patterns": [
        { "include": "#protoMeta" },
        { "include": "#protoData" },
        { "include": "#protoType" },
        { "include": "#protoVal" }
      ]
    },
    "optionalOperator": {
      "match": "\\?:",
      "name": "keyword.operator"
    },
    "protoOptional": {
      "name": "xeto.proto.optional",
      "patterns": [
        { "include": "#qname" },
        { "include": "#optionalOperator" },
        { "include": "#protoUnnamed" }
      ]
    },
    "protoNamed": {
      "name": "xeto.proto.named",
      "patterns": [{ "include": "#name" }, { "include": "#protoUnnamed" }]
    }
  }
}
