{
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "<", "close": ">" },
		{ "open": "\"", "close": "\"", "notIn": ["string"]},
		{ "open": "---", "close": "---", "notIn": ["string"]}
	],
	"brackets": [
		[
			"<",
			">"
		],
		[
			"{",
			"}"
		]
	],
	"folding": {
		"markers": {
			"start": "^\\s*---\\b",
			"end": "^\\s*---\\b"
		}
	}
}